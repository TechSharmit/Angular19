<h1>
    Angular Course by Tech Sharmit
</h1>

<h1>
    Template-Driven Form in Angular - Access ngModelGroup value in Component (TS)
</h1>

<hr>

<form #MyForm="ngForm">

    <div ngModelGroup="UserDetails">

        <label>
            Name:
        </label>

        <input name="Name" ngModel>

        <label>
            Email:
        </label>

        <input name="Email" ngModel>

    </div>



    <button (click)="SendFormData(MyForm)">
        Submit
    </button>

</form>

<hr>

import { Component } from '@angular/core';
import { FormsModule, NgForm } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  SendFormData(Form: NgForm) {
    console.log(Form.value);

    console.log(Form.value.UserDetails);
  }
}
