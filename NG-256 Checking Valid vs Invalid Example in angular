<h1>Angular Course by Tech Sharmit</h1>

<h1>Template-Driven Form Example in Angular - Checking Valid vs Invalid Example</h1>

<hr>

<form #MyForm="ngForm">

    <label>
        Username :
    </label>

    <input type="text" name="Username" ngModel required minlength="3" #UsernameCtrl="ngModel">

    <p>
        <strong>Valid:</strong> {{UsernameCtrl.valid}}
    </p>

    <p>
        <strong>Invalid:</strong> {{UsernameCtrl.invalid}}
    </p>

    <div *ngIf="UsernameCtrl.invalid && UsernameCtrl.touched" style="color: red;">

        <p *ngIf="UsernameCtrl.errors?.['required']">

            Username is required.

        </p>

        <p *ngIf="UsernameCtrl.errors?.['minlength']">

            Minimum {{ UsernameCtrl.errors?.['minlength'].requiredLength }} characters required.
        </p>

    </div>

    <p *ngIf="UsernameCtrl.valid">
        Input is valid.
    </p>
</form>

<hr>

import { NgIf } from '@angular/common';
import { Component } from '@angular/core';
import { FormsModule } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {}
