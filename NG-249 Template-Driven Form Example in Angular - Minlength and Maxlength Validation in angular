<h1>
    Angular Course by Tech Sharmit
</h1>

<h1>
    Template-Driven Form Example in Angular - Minlength and Maxlength Validation
</h1>

<hr>

<form #MyForm="ngForm" (ngSubmit)="OnSubmit(MyForm)">

    <label>
        Username :
    </label>

    <input type="text" name="Username" minlength="3" maxlength="5" ngModel #UsernameCtrl="ngModel">

    <!-- Error Message -->


    <p *ngIf="UsernameCtrl.errors?.['minlength']" style="color: red;">
        Minimum 3 Characters are required.
    </p>

    <p *ngIf="UsernameCtrl.errors?.['maxlength']" style="color: red;">
        Maximum 5 Characters are required.
    </p>

    <button type="submit" [disabled]="MyForm.invalid">Submit</button>

</form>



import { NgIf } from '@angular/common';
import { Component } from '@angular/core';
import { FormsModule } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [ FormsModule, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  OnSubmit(Form: any) {
    alert('Form Submitted!');
  }
}
