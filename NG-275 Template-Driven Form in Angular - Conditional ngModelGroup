<h1>
    Template-Driven Form in Angular - Conditional ngModelGroup (*ngIf)
</h1>

<hr>

<form #MyForm="ngForm">

    <label>
        Show Address
    </label>

    <input type="checkbox" [(ngModel)]="ShowAddress" name="Toggle">

    <div *ngIf="ShowAddress" ngModelGroup="Address">

        <label>
            City :
        </label>
        <input name="City" ngModel>
        <label>
            City :
        </label>
        <input name="State" ngModel>

    </div>

    <button (click)="SubmitForm(MyForm)">
        Submit
    </button>

</form>

<hr>

import { NgIf } from '@angular/common';
import { Component } from '@angular/core';
import { FormsModule, NgForm } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  ShowAddress = false;

  SubmitForm(Form: NgForm) {
    console.log(Form.value);
  }
}
