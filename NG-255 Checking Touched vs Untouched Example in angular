<h1>Angular Course by Tech Sharmit</h1>

<h1>Template-Driven Form Example in Angular - Checking Touched vs Untouched Example</h1>

<hr>

<form #MyForm="ngForm">

    <label>Full Name: </label>

    <input type="text" name="FullName" ngModel #FullNameCtrl="ngModel">

    <p>
        <strong>Touched:</strong> {{FullNameCtrl.touched}}
    </p>

    <p>
        <strong>Untouched:</strong> {{FullNameCtrl.untouched}}
    </p>

    <p *ngIf="FullNameCtrl.untouched">

        User has not visited the input yet.

    </p>

    <p *ngIf="FullNameCtrl.touched">

        User clicked/touched and blurred (move away) from the input field.
    </p>

</form>

<hr>


import { NgIf } from '@angular/common';
import { Component } from '@angular/core';
import { FormsModule } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {}
