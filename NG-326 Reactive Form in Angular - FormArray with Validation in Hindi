<h1>
    Angular Course by Tech Sharmit
</h1>

<h1>
    Reactive Form in Angular - FormArray with Validation
</h1>

<hr>

<form [formGroup]="UserForm" (ngSubmit)="SubmitForm()">

    <div formArrayName="Skills">
        <div *ngFor="let Skill of Skills.controls; let i = index">

            <input [formControlName]="i" placeholder="Enter Skill">

            <div *ngIf="Skill.invalid && Skill.touched" style="color: red;">
                Skill is required.

            </div>

        </div>

    </div>

    <button type="button" (click)="AddSkill()">
        Add Skill
    </button>

    <button type="submit">
        Submit
    </button>
</form>


<hr>

import { JsonPipe, NgFor, NgIf } from '@angular/common';
import { Component, SkipSelf } from '@angular/core';
import {
  FormArray,
  FormBuilder,
  ReactiveFormsModule,
  Validators,
} from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [ReactiveFormsModule, NgFor, JsonPipe, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  UserForm;

  constructor(private Fb: FormBuilder) {
    this.UserForm = this.Fb.group({
      Skills: this.Fb.array([]),
    });
  }

  get Skills() {
    return this.UserForm.get('Skills') as FormArray;
  }

  AddSkill() {
    this.Skills.push(this.Fb.control('', Validators.required));
  }

  SubmitForm() {
    if (this.UserForm.invalid) {
      this.UserForm.markAllAsTouched();
      return;
    }
  }
}
