<h1>
    Template-Driven Form in Angular - Access nested ngModelGroup values (TS)
</h1>

<hr>

<form #MyForm="ngForm">

    <div ngModelGroup="UserDetails">

        <label>
            Username:
        </label>

        <input name="Username" ngModel>

        <div ngModelGroup="Address">

            <label>
                City:
            </label>

            <input name="City" ngModel>

            <label>
                State:
            </label>

            <input name="State" ngModel>

        </div>

        <button (click)="SendFormData(MyForm)">
            Submit
        </button>


    </div>

</form>


<hr>

import { Component } from '@angular/core';
import { FormsModule, NgForm } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  SendFormData(Form: NgForm) {
    console.log(Form.value);

    console.log(Form.value.UserDetails.Address.City);
  }
}
