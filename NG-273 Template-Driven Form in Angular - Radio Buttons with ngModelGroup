<h1>
    Template-Driven Form in Angular - Radio Buttons with ngModelGroup
</h1>

<hr>

<form #MyForm="ngForm">

    <div ngModelGroup="Gender">

        <label>
            Male :
        </label>

        <input type="radio" name="Type" value="Male" ngModel>

        <label>
            Female :
        </label>

        <input type="radio" name="Type" value="Female" ngModel>

    </div>

    <button (click)="SubmitForm(MyForm)">
        Submit
    </button>



</form>

<hr>

import { Component } from '@angular/core';
import { FormsModule, NgForm } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [FormsModule],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  SubmitForm(Form: NgForm) {
    console.log(Form.value);
  }
}
