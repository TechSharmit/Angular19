<h1>
    Angular 19 Course by Tech Sharmit
</h1>

<h2>
    router.navigate() method to preserve old Query Parms and Merge New Query Parms in Angular.
</h2>

<hr>

<button (click)="GoToContact()">
    Go To Contact (With Intial Parms)
</button>

<button (click)="UpdateQueryParms()">
    Merge query parms (Change Page=5, keep sort)
</button>

<router-outlet></router-outlet>

import { Routes } from '@angular/router';
import { AboutComponent } from './about/about.component';
import { ContactComponent } from './contact/contact.component';
export const routes: Routes = [
  { path: 'About', component: AboutComponent },
  { path: 'Contact', component: ContactComponent },
];


import { Component } from '@angular/core';
import { Router, RouterOutlet } from '@angular/router';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [RouterOutlet],
  providers: [],
  templateUrl: './app.component.html',
  styleUrl: './app.component.css',
})
export class AppComponent {
  constructor(private router: Router) {}

  // Step-1 Navigate to contact with intial Query Parms.

  GoToContact() {
    this.router.navigate(['/Contact'], {
      queryParams: { Page: 2, sort: 'Asc' },
    });
  }

  //Step-2 Merge new query params with existing ones.

  UpdateQueryParms() {
    this.router.navigate(['/Contact'], {
      queryParams: { Page: 5 },
      queryParamsHandling: 'merge',
    });
  }
}
