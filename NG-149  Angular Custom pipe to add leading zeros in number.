<h2>
    Angular Custom pipe to add leading zeros in number.
</h2>

<!--
        Sample Input   : 5

        Sample Output  : 0005 

-->

<p>
    Number (Without Pipe) : {{5}}
</p>

<p>
    Number (With Pipe) : {{ 5 | addLeadZero : 5}}
</p>


import { Pipe, PipeTransform } from '@angular/core';

@Pipe({
  name: 'addLeadZero',
})
export class AddLeadZeroPipe implements PipeTransform {
  transform(OriginalNumber: number, Length: number = 2): string {
    return OriginalNumber.toString().padStart(Length, '0');
  }
}



import { Component } from '@angular/core';
import { AddLeadZeroPipe } from './MyPipes/add-lead-zero.pipe';

@Component({
  selector: 'app-root',

  imports: [AddLeadZeroPipe],
  templateUrl: './app.component.html',
  styleUrl: './app.component.css',
})
export class AppComponent {}

