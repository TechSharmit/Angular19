<h1>
    Angular Course by Tech Sharmit
</h1>

<h1>
    Reactive Form in Angular - FormControl with Maximum Length Validation
</h1>

<hr>
<form>

    <label>
        Username :
    </label>

    <input type="text" [formControl]="Username">

    <p *ngIf="Username.errors?.['maxlength']">
        Maximum 4 characters are Allowed.
    </p>
</form>


<hr>

import { NgIf } from '@angular/common';
import { Component } from '@angular/core';
import { FormControl, ReactiveFormsModule, Validators } from '@angular/forms';

@Component({
  selector: 'app-root',
  standalone: true,
  imports: [ReactiveFormsModule, NgIf],
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css'],
})
export class AppComponent {
  Username = new FormControl('', Validators.maxLength(4));
}
